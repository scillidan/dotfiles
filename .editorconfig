root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = tab
insert_final_newline = true
# trim_trailing_whitespace = true

[*.txt]
indent_size = 4
tab_width = 4

[*.md]
indent_style = tab
indent_size = 2
tab_width = 2
# trim_trailing_whitespace = false

[*.sh]
indent_size = 2

[*.html]
indent_size = 2

[*.{css,styl,scss,less,sass}]
indent_size = 2

[*.{js,json}]
indent_size = 2

[*.yaml]
indent_style = space
indent_size = 2

[*.py]
indent_size = 4

