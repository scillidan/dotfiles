{
	"$schema": "https://opencode.ai/config.json",
	"autoupdate": false,
	"share": "disabled",
	"theme": "system",
	"enabled_providers": [
		"ollama"
	],
	"provider": {
		"ollama": {
			"npm": "@ai-sdk/openai-compatible",
			"name": "Ollama (local)",
			"options": {
				"baseURL": "http://localhost:11434/v1"
			},
			"models": {
				"gemma3:12.2b": {
					"name": "Gemma3 12B",
				},
				"mistral:7b-instruct": {
					"name": "Mistral 7B Instruct"
				},
				"llama3.1:8b": {
					"name": "Llama3.1 8B"
				},
				"qwen3:14b": {
					"name": "Qwen3 14B"
				}
			}
		}
	},
	"agent": {
		"build": {
			"mode": "subagent"
		},
		"plan": {
			"mode": "subagent"
		},
		"default": {
			"mode": "primary",
			"model": "ollama/mistral:7b-instruct",
			"tools": {
				"write": false,
				"edit": false,
				"bash": false
			}
		},
		"coder": {
			"mode": "primary",
			"model": "ollama/mistral:7b-instruct",
			"tools": {
				"write": true,
				"edit": true,
				"bash": true
			}
		}
	}
}
